<% if current_user %>
  <%= link_to [profile, Favorite.new], class: 'icon-empty', method: :post, remote: true do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i> <%= profile.favorites.count %>
  <% end %>
<% else %>
  <i class="fa fa-heart-o" aria-hidden="true"></i> <%= profile.favorites.count %>
<% end %>
