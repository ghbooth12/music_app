<table class="table table-bordered">
  <tr>
    <th>When</th>
    <th>Title</th>
    <th>Location (City State)</th>
    <% if user_is_authrized?(current_user, profile) %>
      <th>Manage</th>
    <% end %>
  </tr>

  <% concerts.each do |concert| %>
    <tr>
      <td><%= concert.show_date %>, <%= concert.show_time.strftime("%l:%M %P") %></td>
      <td>
        <%= link_to concert.title, [concert.user, concert]  %>
      </td>
      <td><%= concert.location_name %> <small>(<%= concert.city %> <%= concert.state %></small>)</td>
      <% if user_is_authrized?(current_user, profile) %>
        <td>
          <%= link_to edit_user_concert_path(concert.user, concert) do %>
            <i class="fa fa-pencil-square-o fa-lg"></i>
          <% end %>
          <%= link_to [concert.user, concert], method: :delete, data: { confirm: 'Are you sure to delete this concert information?' } do %>
            <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
